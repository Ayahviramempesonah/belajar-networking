<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/tv_quote"
            android:layout_width="317dp"
            android:layout_height="114dp" android:id="@+id/textView_quote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.255"
            app:layout_constraintHorizontal_bias="0.497" />
    <TextView
            android:text="@string/tv_author"
            android:layout_width="113dp"
            android:layout_height="31dp" android:id="@+id/textView_author"
            app:layout_constraintStart_toStartOf="@+id/textView_quote"
            app:layout_constraintEnd_toEndOf="@+id/textView_quote"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="372dp" app:layout_constraintHorizontal_bias="0.42"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            app:layout_constraintEnd_toEndOf="@+id/textView_quote"
            app:layout_constraintStart_toStartOf="@+id/textView_quote"
            app:layout_constraintTop_toBottomOf="@+id/textView_quote" android:layout_marginTop="104dp"
    />
    <Button
            android:text="@string/btn_all_quotes"
            android:layout_width="313dp"
            android:layout_height="58dp" android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="232dp" app:layout_constraintEnd_toEndOf="@+id/textView_quote"
            app:layout_constraintStart_toStartOf="@+id/textView_quote" android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.384"/>
</androidx.constraintlayout.widget.ConstraintLayout>